DROP DATABASE IF EXISTS practice;
CREATE DATABASE IF NOT EXISTS practice;
USE practice;


CREATE TABLE IF NOT EXISTS directors(
    directorId INT PRIMARY KEY AUTO_INCREMENT,
    director  VARCHAR(100) NOT NULL,
    PRIMARY KEY (director)
);

CREATE TABLE IF NOT EXISTS movies(
    movieId INT PRIMARY KEY AUTO_INCREMENT,
    title  VARCHAR(100) DEFAULT 'JAWS',
    director VARCHAR(100),
    release_date DATE DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (director) REFERENCES directors.director
);


CREATE TABLE IF NOT EXISTS awards(
    awardId INT PRIMARY KEY AUTO_INCREMENT,
    award  VARCHAR(100) DEFAULT 'Oscar',
    director VARCHAR(100),
    FOREIGN KEY (award) REFERENCES directors.director
);

INSERT INTO directors (director) VALUES
  ('Max'), ('Jason'), ('Thomas'), ('Mary'), ('Jen');

INSERT INTO movies (title, director) VALUES
  ('Zoo', 'Max'), ('Pie', 'Jason'), ('Pizza', 'Thomas'), ('lemon', 'Mary'), ('orange', 'Jen');

INSERT INTO awards (award, director) VALUES
  ('Oscar', 'Max'), ('Emmy', 'Jason'), ('Oscar', 'Thomas'), ('Oscar', 'Mary'), ('Oscar', 'Jen');